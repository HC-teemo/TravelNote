<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

<com.qmuiteam.qmui.widget.QMUITopBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mynote_topbar">

</com.qmuiteam.qmui.widget.QMUITopBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/nonote"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="你还没有日记(￣▽￣)"
                android:textColor="@color/qmui_config_color_gray_3"
                android:textSize="16dp" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:elevation="6dp"
                android:padding="10dp"
                android:text="新建日记"
                android:id="@+id/newnote"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:qmui_backgroundColor="@color/light_blue"
                app:qmui_borderColor="@color/light_blue" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:visibility="gone"
        android:id="@+id/hasnote"
        android:background="@color/white">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:layout_width="match_parent"
            app:qmui_radius="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/bookcover">
        </com.qmuiteam.qmui.widget.QMUIRadiusImageView>

    </LinearLayout>

</LinearLayout>
