<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/step_card_card_view"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:cardElevation="0dp"
        style="@style/Card">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textSize="14dp"
                    android:drawablePadding="2dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/ic_time_sm"
                    android:id="@+id/step_card_date"
                    android:textColor="@color/qmui_config_color_75_pure_black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:textSize="14dp"
                    android:drawablePadding="2dp"
                    android:textColor="@color/qmui_config_color_75_pure_black"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/ic_location_sm"
                    android:id="@+id/step_card_location"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/step_card_img"
                android:layout_margin="8dp"
                android:layout_marginBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/default_cover"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/step_card_content"
                    android:textSize="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>